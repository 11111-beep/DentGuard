<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- 主渐变 -->
            <gradient
                android:type="linear"
                android:startColor="#FF00BCD4"
                android:centerColor="#FF2196F3"
                android:endColor="#FF3F51B5"
                android:angle="135"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="1.5dp"
                android:color="#B3FFFFFF"/>
            <!-- 光泽效果 -->
            <gradient
                android:type="linear"
                android:startColor="#80FFFFFF"
                android:centerColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="45"/>
        </shape>
    </item>
</selector> 